{% extends 'base.html.twig' %}

{% block title %}Test de Personnalités!
{% endblock %}

{% block body %}

	<body>
		<main>
			<div class="container ">
				<div class="row">
					<div class="col-5 signup-section">
						<div class="page-number d-flex justify-content-end">
							<p class="page-counter">2 sur 2</p>
						</div>
						<!--Form section-->
						<form
							action="/persotest/result" method="post">
							<!--Question section-->
							<div
								class="">
								<!--boucle question-->
								{% for question in questions %}

									<label for="">
										<h5 class="question-title">{{question.text}}</h5>
									</label><br/>

									<!--boucle réponse-->
									{% for answer in question.answers %}
										<div class="form-check">
											<input class="form-check-input" type="radio" name="flexRadioDefault{{ question.id }}" id="flexRadioDefault1" value="{{answer.idCategory}}">
											<label class="form-check-label" for="flexRadioDefault1">
												{{answer.text}}
											</label>
										</div>
									{% endfor %}
								{% endfor %}
							</div><br/>
							<!--Send section-->
							<div class="text-center">
								<input type="submit" value="Suivant" class="btn">
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>
	</body>
{% endblock %}